---
import BaseLayout from '../layouts/BaseLayout.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

const title = 'Nous contacter - VinylVault'
const description = "Contactez l'équipe VinylVault pour toute question ou suggestion."
---

<BaseLayout {title} {description}>
  <Navbar slot="navbar" />

  <main class="min-h-screen bg-neutral-50 dark:bg-black/20">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <!-- En-tête -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-neutral-900 dark:text-neutral-50 mb-4">
            Nous contacter
          </h1>
          <p class="text-neutral-600 dark:text-neutral-400 text-lg">
            Une question ? Une suggestion ? Nous sommes là pour vous aider.
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Formulaire de contact -->
          <div
            class="bg-neutral-50 dark:bg-black/20 rounded-xl shadow-sm dark:shadow-white dark:shadow-dark-card p-6"
          >
            <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-50 mb-6">
              Envoyez-nous un message
            </h2>

            <form class="space-y-4">
              <div>
                <label
                  for="name"
                  class="block text-sm font-medium text-neutral-900 dark:text-neutral-50 mb-2"
                >
                  Nom complet
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 bg-neutral-50 dark:bg-black/20 text-neutral-900 dark:text-neutral-50"
                  placeholder="Votre nom"
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-neutral-900 dark:text-neutral-50 mb-2"
                >
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 bg-neutral-50 dark:bg-black/20 text-neutral-900 dark:text-neutral-50"
                  placeholder="votre@email.com"
                />
              </div>

              <div>
                <label
                  for="subject"
                  class="block text-sm font-medium text-neutral-900 dark:text-neutral-50 mb-2"
                >
                  Sujet
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 bg-neutral-50 dark:bg-black/20 text-neutral-900 dark:text-neutral-50"
                >
                  <option value="">Sélectionnez un sujet</option>
                  <option value="support">Support technique</option>
                  <option value="feature">Demande de fonctionnalité</option>
                  <option value="bug">Rapport de bug</option>
                  <option value="account">Problème de compte</option>
                  <option value="other">Autre</option>
                </select>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-medium text-neutral-900 dark:text-neutral-50 mb-2"
                >
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 bg-neutral-50 dark:bg-black/20 text-neutral-900 dark:text-neutral-50 resize-none"
                  placeholder="Décrivez votre question ou suggestion..."></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-gradient-emerald dark:bg-gradient-emerald text-white px-6 py-3 rounded-xl hover:bg-gradient-emerald/80 dark:hover:bg-gradient-emerald/80 transition-colors font-medium"
              >
                Envoyer le message
              </button>
            </form>
          </div>

          <!-- Informations de contact -->
          <div class="space-y-6">
            <div
              class="bg-neutral-50 dark:bg-black/20 rounded-xl shadow-sm dark:shadow-white dark:shadow-dark-card p-6"
            >
              <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-50 mb-6">
                Informations de contact
              </h2>

              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div
                    class="flex-shrink-0 w-10 h-10 bg-gradient-emerald dark:bg-gradient-emerald rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-5 h-5 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-900 dark:text-neutral-50">Email</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">support@vinylvault.com</p>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">Réponse sous 24h</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div
                    class="flex-shrink-0 w-10 h-10 bg-gradient-emerald dark:bg-gradient-emerald rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-5 h-5 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-900 dark:text-neutral-50">Horaires</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">Lundi - Vendredi</p>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">9h00 - 18h00 (CET)</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div
                    class="flex-shrink-0 w-10 h-10 bg-gradient-emerald dark:bg-gradient-emerald rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-5 h-5 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-900 dark:text-neutral-50">Support</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">Centre d'aide</p>
                    <a
                      href="/help"
                      class="text-sm text-gradient-emerald dark:text-gradient-emerald hover:underline"
                    >
                      Consulter la FAQ
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Types de demandes -->
            <div
              class="bg-neutral-50 dark:bg-black/20 rounded-xl shadow-sm dark:shadow-white dark:shadow-dark-card p-6"
            >
              <h3 class="text-xl font-semibold text-neutral-900 dark:text-neutral-50 mb-4">
                Types de demandes
              </h3>

              <div class="space-y-3">
                <div class="flex items-start space-x-3">
                  <div
                    class="w-2 h-2 bg-gradient-emerald dark:bg-gradient-emerald rounded-full mt-2"
                  >
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-50">
                      Support technique
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      Problèmes de connexion, bugs, erreurs
                    </p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div
                    class="w-2 h-2 bg-gradient-emerald dark:bg-gradient-emerald rounded-full mt-2"
                  >
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-50">
                      Nouvelles fonctionnalités
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      Suggestions d'amélioration
                    </p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div
                    class="w-2 h-2 bg-gradient-emerald dark:bg-gradient-emerald rounded-full mt-2"
                  >
                  </div>
                  <div>
                    <h4 class="font-medium text-neutral-900 dark:text-neutral-50">
                      Gestion de compte
                    </h4>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">
                      Mot de passe, données personnelles
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer slot="footer" />
</BaseLayout>
