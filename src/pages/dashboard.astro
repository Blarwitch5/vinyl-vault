        <!-- Derni√®re activit√© -->
        <div
          class="bg-light-background dark:bg-dark-surface rounded-xl shadow-sm border border-light-surface dark:border-dark-surface"
        >
          <div
            class="px-6 py-4 border-b border-light-surface dark:border-dark-surface"
          >
            <h3
              class="text-lg font-semibold text-light-text dark:text-dark-text"
