---
// Import des fonts Poppins (poids principaux)
import '@fontsource/poppins/300.css' // Light
import '@fontsource/poppins/400.css' // Regular
import '@fontsource/poppins/500.css' // Medium
import '@fontsource/poppins/600.css' // SemiBold
import '@fontsource/poppins/700.css' // Bold

// Import JetBrains Mono pour les codes et références
import '@fontsource/jetbrains-mono/400.css' // Regular
import '@fontsource/jetbrains-mono/500.css' // Medium

export interface Props {
  title?: string
  description?: string
}

const {
  title = 'VinylVault - Votre collection de vinyles',
  description = 'Gérez et découvrez votre collection de vinyles',
} = Astro.props
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Script pour éviter le flash du thème -->
    <script is:inline>
      {
        const theme = localStorage.getItem('vinyl-vault-theme')

        // Par défaut, utiliser le dark mode si aucun thème n'est stocké
        // La migration complète sera gérée par le composant ThemeToggle
        if (theme === 'dark' || !theme) {
          document.documentElement.classList.add('dark')
        }
      }
    </script>
  </head>
  <body
    class="min-h-screen bg-neutral-50 dark:bg-neutral-950 text-neutral-900 dark:text-neutral-50 transition-colors duration-300"
  >
    <nav>
      <slot name="navbar" />
    </nav>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer>
      <slot name="footer" />
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family:
      'Poppins',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
  }

  /* Optimisation pour Poppins */
  body {
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
