---
// Import des fonts Poppins (poids principaux)
import '@fontsource/poppins/300.css' // Light
import '@fontsource/poppins/400.css' // Regular
import '@fontsource/poppins/500.css' // Medium
import '@fontsource/poppins/600.css' // SemiBold
import '@fontsource/poppins/700.css' // Bold

// Import JetBrains Mono pour les codes et références
import '@fontsource/jetbrains-mono/400.css' // Regular
import '@fontsource/jetbrains-mono/500.css' // Medium

export interface Props {
  title?: string
  description?: string
}

const {
  title = 'VinylVault - Votre collection de vinyles',
  description = 'Gérez et découvrez votre collection de vinyles',
} = Astro.props
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#059669" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="VinylVault" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="application-name" content="VinylVault" />
    
    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/pwa-192x192.png" />
    <link rel="apple-touch-icon" sizes="512x512" href="/pwa-512x512.png" />
    
    <!-- Manifest -->
    <link rel="manifest" href="/manifest.webmanifest" />
    
    <!-- iOS Splash Screens -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Microsoft Tiles -->
    <meta name="msapplication-TileColor" content="#059669" />
    <meta name="msapplication-config" content="/browserconfig.xml" />
    
    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Script pour éviter le flash du thème -->
    <script is:inline>
      {
        const theme = localStorage.getItem('vinyl-vault-theme')

        // Par défaut, utiliser le dark mode si aucun thème n'est stocké
        // La migration complète sera gérée par le composant ThemeToggle
        if (theme === 'dark' || !theme) {
          document.documentElement.classList.add('dark')
        }
      }
    </script>
    
    <!-- Script pour les optimisations tactiles -->
    <script>
      import { addTouchClasses, initializeTouchOptimizations } from '../utils/touch-optimizations.js';
      
      // Initialiser les optimisations tactiles
      document.addEventListener('DOMContentLoaded', () => {
        addTouchClasses();
        initializeTouchOptimizations();
      });
    </script>
  </head>
  <body
    class="min-h-screen bg-neutral-50 dark:bg-neutral-950 text-neutral-900 dark:text-neutral-50 transition-colors duration-300 overflow-x-hidden"
  >
    <header style="z-index: 10000; position: relative;">
      <slot name="navbar" />
    </header>

    <main class="container mx-auto px-3 sm:px-4 py-6 sm:py-8">
      <slot />
    </main>

    <footer>
      <slot name="footer" />
    </footer>

    <!-- Composant PWA -->
    <div id="pwa-components">
      <slot name="pwa" />
    </div>
    
  </body>
</html>

<style is:global>
  html {
    font-family:
      'Poppins',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
  }

  /* Optimisation pour Poppins */
  body {
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
