---
export interface Props {
  position?: 'left' | 'right'
  width?: 'sm' | 'md' | 'lg'
  sticky?: boolean
  class?: string
}

const {
  position = 'left',
  width = 'md',
  sticky = false,
  class: className = '',
  ...rest
} = Astro.props

// Largeurs
const widths = {
  sm: 'w-64',
  md: 'w-72',
  lg: 'w-80',
}

// Position
const positions = {
  left: 'order-1',
  right: 'order-3',
}

// Sticky
const stickyClass = sticky ? 'sticky top-8 h-fit' : ''

const classes = `${widths[width]} ${positions[position]} ${stickyClass} ${className}`
---

<aside class={classes} {...rest}>
  <slot />
</aside>
