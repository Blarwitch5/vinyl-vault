---
export interface Props {
  title?: string
  subtitle?: string
  class?: string
}

const { title = '', subtitle = '', class: className = '', ...rest } = Astro.props
---

<header class={`py-8 ${className}`} {...rest}>
  {
    title && (
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-neutral-50 mb-2">
          {title}
        </h1>
        {subtitle && (
          <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto">{subtitle}</p>
        )}
      </div>
    )
  }
  <slot />
</header>
