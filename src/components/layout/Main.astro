---
export interface Props {
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full'
  padding?: 'none' | 'sm' | 'md' | 'lg'
  class?: string
}

const { maxWidth = 'xl', padding = 'md', class: className = '', ...rest } = Astro.props

// Largeurs maximales
const maxWidths = {
  sm: 'max-w-sm',
  md: 'max-w-md',
  lg: 'max-w-lg',
  xl: 'max-w-xl',
  '2xl': 'max-w-2xl',
  full: 'max-w-full',
}

// Padding
const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
}

const classes = `${maxWidths[maxWidth]} ${paddings[padding]} ${className}`
---

<main class={`mx-auto ${classes}`} {...rest}>
  <slot />
</main>
