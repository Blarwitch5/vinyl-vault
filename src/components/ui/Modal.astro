---
export interface Props {
  id?: string
  title?: string
  size?: 'sm' | 'md' | 'lg' | 'xl'
  class?: string
}

const { id = 'modal', title = '', size = 'md', class: className = '', ...rest } = Astro.props

// Tailles
const sizes = {
  sm: 'max-w-md',
  md: 'max-w-lg',
  lg: 'max-w-2xl',
  xl: 'max-w-4xl',
}

const modalClasses = `${sizes[size]} ${className}`
---

<div
  {id}
  class="fixed inset-0 z-50 hidden overflow-y-auto"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>
  <!-- Overlay -->
  <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" aria-hidden="true"></div>

  <!-- Modal container -->
  <div class="flex min-h-full items-center justify-center p-4">
    <div
      class={`relative w-full ${modalClasses} transform overflow-hidden rounded-2xl bg-white dark:bg-neutral-900 shadow-xl transition-all`}
      {...rest}
    >
      <!-- Header -->
      {
        title && (
          <div class="px-6 py-4 border-b border-neutral-200 dark:border-neutral-800">
            <h3
              id="modal-title"
              class="text-lg font-semibold text-neutral-900 dark:text-neutral-50"
            >
              {title}
            </h3>
          </div>
        )
      }

      <!-- Content -->
      <div class="px-6 py-4">
        <slot />
      </div>

      <!-- Footer -->
      <div class="px-6 py-4 border-t border-neutral-200 dark:border-neutral-800">
        <slot name="footer" />
      </div>
    </div>
  </div>
</div>
