---
export interface Props {
  variant?: 'default' | 'glass' | 'glass-dark' | 'bordered'
  padding?: 'none' | 'sm' | 'md' | 'lg'
  hover?: boolean
  class?: string
}

const {
  variant = 'default',
  padding = 'md',
  hover = false,
  class: className = '',
  ...rest
} = Astro.props

// Classes de base
const baseClasses = 'rounded-xl transition-all duration-200'

// Variants
const variants = {
  default:
    'bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 shadow-sm',
  glass: 'glass dark:glass-dark',
  'glass-dark': 'glass-dark',
  bordered: 'border-2 border-emerald-200 dark:border-emerald-800 bg-white dark:bg-neutral-900',
}

// Padding
const paddings = {
  none: '',
  sm: 'p-3',
  md: 'p-4',
  lg: 'p-6',
}

// Hover effects
const hoverEffects = hover ? 'hover:shadow-lg hover:-translate-y-1' : ''

const classes = `${baseClasses} ${variants[variant]} ${paddings[padding]} ${hoverEffects} ${className}`
---

<div class={classes} {...rest}>
  <slot />
</div>
