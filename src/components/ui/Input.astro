---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'search'
  placeholder?: string
  value?: string
  disabled?: boolean
  required?: boolean
  class?: string
  name?: string
  id?: string
}

const {
  type = 'text',
  placeholder = '',
  value = '',
  disabled = false,
  required = false,
  class: className = '',
  name,
  id,
  ...rest
} = Astro.props

const baseClasses =
  'w-full px-4 py-2 text-neutral-900 dark:text-neutral-50 bg-white dark:bg-neutral-900 border border-neutral-300 dark:border-neutral-700 rounded-xl focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200 placeholder-neutral-500 dark:placeholder-neutral-400 disabled:opacity-50 disabled:cursor-not-allowed'

const classes = `${baseClasses} ${className}`
---

<input {type} {placeholder} {value} {disabled} {required} {name} {id} class={classes} {...rest} />
