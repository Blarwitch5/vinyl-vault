---
export interface Props {
  placeholder?: string
  initialValue?: string
  action?: string
}

const {
  placeholder = 'Rechercher un vinyle...',
  initialValue = '',
  action = '/search',
} = Astro.props
---

<div class="w-full max-w-2xl mx-auto">
  <form method="get" {action} class="relative">
    <div class="relative">
      <input
        type="text"
        name="q"
        value={initialValue}
        {placeholder}
        class="w-full px-4 py-3 pl-12 pr-4 text-neutral-900 dark:text-neutral-50 bg-white dark:bg-neutral-950 rounded-xl focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 focus:border-transparent transition-colors placeholder:text-neutral-600 dark:placeholder:text-neutral-400"
        autocomplete="off"
      />
      <div class="absolute inset-y-0 left-0 flex items-center pl-4">
        <svg
          class="w-5 h-5 text-neutral-600 dark:text-neutral-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m21 21-4.35-4.35"></path>
        </svg>
      </div>
    </div>

    <button
      type="submit"
      class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-gradient-emerald dark:bg-gradient-emerald text-white px-6 py-2 rounded-lg hover:bg-gradient-emerald/80 dark:hover:bg-gradient-emerald/80 transition-colors focus:outline-none focus:ring-2 focus:ring-light-accent1 dark:focus:ring-dark-accent1 focus:ring-offset-2 dark:focus:ring-offset-dark-background"
    >
      Rechercher
    </button>
  </form>
</div>

<style>
  /* Animation pour le focus */
  input:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
</style>
