---
// Modal pour partager une collection sur les réseaux sociaux
---

<div
  id="share-collection-modal"
  class="fixed inset-0 bg-black/70 backdrop-blur-sm items-center justify-center z-50 hidden"
>
  <div
    class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-700 rounded-2xl p-6 w-full max-w-sm mx-4 shadow-2xl"
  >
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl font-bold text-neutral-900 dark:text-neutral-50">
        Partager la collection
      </h2>
      <button
        id="close-share-modal"
        class="text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-50 transition-colors"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M18 6 6 18"></path>
        </svg>
      </button>
    </div>

    <!-- Info de la collection -->
    <div class="bg-neutral-50 dark:bg-neutral-800 rounded-xl p-4 mb-6">
      <h3
        id="share-collection-name"
        class="font-semibold text-neutral-900 dark:text-neutral-50 mb-1"
      >
        Nom de la collection
      </h3>
      <p id="share-collection-stats" class="text-sm text-neutral-600 dark:text-neutral-400">
        0 vinyles
      </p>
    </div>

    <!-- Réseaux sociaux -->
    <div class="space-y-3 mb-6">
      <h3 class="text-sm font-medium text-neutral-900 dark:text-neutral-50 mb-3">Partager sur :</h3>

      <div class="grid grid-cols-2 gap-3">
        <!-- Twitter/X -->
        <button
          id="share-twitter"
          class="flex items-center space-x-3 p-3 bg-neutral-50 dark:bg-neutral-800 hover:bg-blue-50 dark:hover:bg-blue-900/20 border border-neutral-200 dark:border-neutral-700 hover:border-blue-300 dark:hover:border-blue-600 rounded-xl transition-all group"
        >
          <svg
            class="w-5 h-5 text-neutral-600 dark:text-neutral-400 group-hover:text-blue-500"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
            ></path>
          </svg>
          <span
            class="text-sm font-medium text-neutral-900 dark:text-neutral-50 group-hover:text-blue-500"
            >Twitter</span
          >
        </button>

        <!-- Facebook -->
        <button
          id="share-facebook"
          class="flex items-center space-x-3 p-3 bg-neutral-50 dark:bg-neutral-800 hover:bg-blue-50 dark:hover:bg-blue-900/20 border border-neutral-200 dark:border-neutral-700 hover:border-blue-300 dark:hover:border-blue-600 rounded-xl transition-all group"
        >
          <svg
            class="w-5 h-5 text-neutral-600 dark:text-neutral-400 group-hover:text-blue-600"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            ></path>
          </svg>
          <span
            class="text-sm font-medium text-neutral-900 dark:text-neutral-50 group-hover:text-blue-600"
            >Facebook</span
          >
        </button>

        <!-- WhatsApp -->
        <button
          id="share-whatsapp"
          class="flex items-center space-x-3 p-3 bg-neutral-50 dark:bg-neutral-800 hover:bg-green-50 dark:hover:bg-green-900/20 border border-neutral-200 dark:border-neutral-700 hover:border-green-300 dark:hover:border-green-600 rounded-xl transition-all group"
        >
          <svg
            class="w-5 h-5 text-neutral-600 dark:text-neutral-400 group-hover:text-green-500"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
            ></path>
          </svg>
          <span
            class="text-sm font-medium text-neutral-900 dark:text-neutral-50 group-hover:text-green-500"
            >WhatsApp</span
          >
        </button>

        <!-- Email -->
        <button
          id="share-email"
          class="flex items-center space-x-3 p-3 bg-neutral-50 dark:bg-neutral-800 hover:bg-gray-50 dark:hover:bg-gray-900/20 border border-neutral-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-gray-600 rounded-xl transition-all group"
        >
          <svg
            class="w-5 h-5 text-neutral-600 dark:text-neutral-400 group-hover:text-gray-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <span
            class="text-sm font-medium text-neutral-900 dark:text-neutral-50 group-hover:text-gray-600"
            >Email</span
          >
        </button>
      </div>
    </div>

    <!-- Copier le lien -->
    <div class="border-t border-neutral-200 dark:border-neutral-700 pt-4">
      <div class="flex items-center space-x-3">
        <div class="flex-1">
          <input
            id="share-url"
            type="text"
            readonly
            class="w-full px-3 py-2 bg-neutral-50 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-lg text-sm text-neutral-600 dark:text-neutral-400 focus:outline-none"
            value=""
          />
        </div>
        <button
          id="copy-link"
          class="px-4 py-2 bg-gradient-emerald text-white rounded-lg hover:bg-gradient-emerald/80 transition-colors"
          title="Copier le lien"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
            ></path>
          </svg>
        </button>
      </div>
      <p class="text-xs text-neutral-500 dark:text-neutral-400 mt-2">
        Partagez ce lien pour que d'autres puissent voir votre collection
      </p>
    </div>

    <!-- Message de succès -->
    <div id="copy-success" class="hidden mt-4">
      <div
        class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-3"
      >
        <div class="flex items-center space-x-2">
          <svg
            class="w-4 h-4 text-green-600 dark:text-green-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"
            ></path>
          </svg>
          <span class="text-sm text-green-600 dark:text-green-400"
            >Lien copié dans le presse-papiers !</span
          >
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Éléments DOM
  const modal = document.getElementById('share-collection-modal')
  const closeBtn = document.getElementById('close-share-modal')
  const shareUrl = document.getElementById('share-url') as HTMLInputElement
  const copyBtn = document.getElementById('copy-link')
  const copySuccess = document.getElementById('copy-success')
  const collectionNameEl = document.getElementById('share-collection-name')
  const collectionStatsEl = document.getElementById('share-collection-stats')

  // Boutons de partage
  const twitterBtn = document.getElementById('share-twitter')
  const facebookBtn = document.getElementById('share-facebook')
  const whatsappBtn = document.getElementById('share-whatsapp')
  const emailBtn = document.getElementById('share-email')

  let currentCollection: any = null

  // Ouvrir le modal avec animation discrète
  function openShareModal(collection: any) {
    if (!modal) return

    currentCollection = collection

    // Mettre à jour les informations de la collection
    if (collectionNameEl) {
      collectionNameEl.textContent = collection.name || 'Ma Collection'
    }
    if (collectionStatsEl) {
      collectionStatsEl.textContent = `${collection.vinylCount || 0} vinyles`
    }

    // Générer l'URL de partage
    const shareLink = `${window.location.origin}/collection/${collection.id}`
    if (shareUrl) {
      shareUrl.value = shareLink
    }

    document.body.style.overflow = 'hidden'
    modal.style.opacity = '0'
    modal.classList.remove('hidden')
    modal.classList.add('flex')

    setTimeout(() => {
      if (modal) {
        modal.style.transition = 'opacity 250ms ease-out'
        modal.style.opacity = '1'
      }
    }, 10)

    hideCopySuccess()
  }

  // Fermer le modal avec animation discrète
  function closeShareModal() {
    if (!modal) return

    modal.style.transition = 'opacity 200ms ease-in'
    modal.style.opacity = '0'

    setTimeout(() => {
      if (modal) {
        modal.classList.add('hidden')
        modal.classList.remove('flex')
        modal.style.transition = ''
        modal.style.opacity = ''
        document.body.style.overflow = ''
      }
    }, 200)

    hideCopySuccess()
  }

  // Copier le lien
  async function copyLink() {
    if (!shareUrl) return

    try {
      await navigator.clipboard.writeText(shareUrl.value)
      showCopySuccess()
    } catch (error) {
      // Fallback pour les navigateurs plus anciens
      shareUrl.select()
      shareUrl.setSelectionRange(0, 99999)
      document.execCommand('copy')
      showCopySuccess()
    }
  }

  // Afficher le message de succès
  function showCopySuccess() {
    copySuccess?.classList.remove('hidden')
    setTimeout(() => {
      hideCopySuccess()
    }, 3000)
  }

  // Masquer le message de succès
  function hideCopySuccess() {
    copySuccess?.classList.add('hidden')
  }

  // Partager sur Twitter
  function shareOnTwitter() {
    if (!currentCollection) return

    const text = `Découvrez ma collection de vinyles "${currentCollection.name}" sur VinylVault ! 🎵`
    const url = `${window.location.origin}/collection/${currentCollection.id}`
    const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(url)}`

    window.open(twitterUrl, '_blank', 'width=600,height=400')
  }

  // Partager sur Facebook
  function shareOnFacebook() {
    if (!currentCollection) return

    const url = `${window.location.origin}/collection/${currentCollection.id}`
    const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`

    window.open(facebookUrl, '_blank', 'width=600,height=400')
  }

  // Partager sur WhatsApp
  function shareOnWhatsApp() {
    if (!currentCollection) return

    const text = `Découvrez ma collection de vinyles "${currentCollection.name}" sur VinylVault ! 🎵`
    const url = `${window.location.origin}/collection/${currentCollection.id}`
    const message = `${text}\n${url}`
    const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(message)}`

    window.open(whatsappUrl, '_blank')
  }

  // Partager par email
  function shareByEmail() {
    if (!currentCollection) return

    const subject = `Découvrez ma collection de vinyles "${currentCollection.name}"`
    const body = `Salut !\n\nJe voulais partager avec toi ma collection de vinyles "${currentCollection.name}" sur VinylVault.\n\nTu peux la consulter ici : ${window.location.origin}/collection/${currentCollection.id}\n\nBonne écoute ! 🎵`
    const emailUrl = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`

    window.location.href = emailUrl
  }

  // Événements
  closeBtn?.addEventListener('click', closeShareModal)
  copyBtn?.addEventListener('click', copyLink)
  twitterBtn?.addEventListener('click', shareOnTwitter)
  facebookBtn?.addEventListener('click', shareOnFacebook)
  whatsappBtn?.addEventListener('click', shareOnWhatsApp)
  emailBtn?.addEventListener('click', shareByEmail)

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) closeShareModal()
  })

  // Fermer avec Échap
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      closeShareModal()
    }
  })

  // Exposer la fonction pour ouvrir le modal
  ;(window as any).openShareModal = openShareModal
</script>
