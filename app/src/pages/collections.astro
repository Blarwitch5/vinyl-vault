---
import { Eye, Grid3x3, List, Plus, Search, SquarePen, Trash2 } from '@lucide/astro/icons'
import DashboardLayout from '../layouts/DashboardLayout.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Collections">
  <DashboardLayout title="Collections" currentPath="/collections">
    <!-- En-tête avec actions -->
    <div class="mb-6 flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
      <div>
        <h1 class="text-xl font-bold text-neutral-900 dark:text-white">Mes Collections</h1>
        <p class="mt-1 text-neutral-600 dark:text-neutral-400">
          Gérez et organisez vos collections de vinyles
        </p>
      </div>
      <div class="flex items-center space-x-3">
        <button
          class="bg-gradient-rock hover:bg-gradient-rock-hover flex items-center rounded-lg px-4 py-2 text-white transition-colors"
        >
          <Plus class="mr-2 h-4 w-4" />
          Nouvelle Collection
        </button>
        <!-- Boutons de vue -->
        <div class="flex rounded-lg bg-neutral-100 p-1 dark:bg-neutral-700">
          <button
            class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
            title="Vue liste"
          >
            <List class="h-4 w-4" />
          </button>
          <button
            class="rounded-md bg-white p-2 text-orange-600 shadow-sm dark:bg-neutral-800 dark:text-orange-400"
            title="Vue grille"
          >
            <Grid3x3 class="h-4 w-4" />
          </button>
        </div>
      </div>
    </div>

    <!-- Barre de recherche et filtres -->
    <div class="mb-6 rounded-lg bg-white p-6 shadow-sm dark:bg-neutral-800">
      <div class="flex flex-col gap-4 md:flex-row">
        <div class="relative flex-1">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <Search class="h-5 w-5 text-neutral-400" />
          </div>
          <input
            type="text"
            placeholder="Rechercher une collection..."
            class="w-full rounded-lg border border-neutral-300 py-2 pr-4 pl-10 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
          />
        </div>
        <select
          class="rounded-lg border border-neutral-300 px-4 py-2 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
        >
          <option>Tous les genres</option>
          <option>Rock</option>
          <option>Jazz</option>
          <option>Hip-Hop</option>
          <option>Electronic</option>
          <option>Classical</option>
        </select>
        <select
          class="rounded-lg border border-neutral-300 px-4 py-2 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
        >
          <option>Trier par</option>
          <option>Nom (A-Z)</option>
          <option>Nom (Z-A)</option>
          <option>Date de création</option>
          <option>Nombre de vinyles</option>
        </select>
      </div>
    </div>

    <!-- Grille des collections -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      <!-- Collection 1 -->
      <div
        class="rounded-lg bg-white shadow-sm transition-shadow hover:shadow-md dark:bg-neutral-800"
      >
        <div class="p-6">
          <div class="mb-4 flex items-start justify-between">
            <div class="bg-gradient-rock flex h-16 w-16 items-center justify-center rounded-lg">
              <span class="text-xl font-bold text-white">RC</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Voir"
              >
                <Eye class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Éditer"
              >
                <SquarePen class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-red-600 dark:text-neutral-400 dark:hover:text-red-400"
                title="Supprimer"
              >
                <Trash2 class="h-4 w-4" />
              </button>
            </div>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-neutral-900 dark:text-white">Rock Classics</h3>
          <p class="mb-4 text-neutral-600 dark:text-neutral-400">
            Les plus grands classiques du rock des années 60-80
          </p>
          <div
            class="flex items-center justify-between text-xs text-neutral-500 dark:text-neutral-400"
          >
            <span>45 vinyles</span>
            <span>Créée le 12/03/2023</span>
          </div>
        </div>
      </div>

      <!-- Collection 2 -->
      <div
        class="rounded-lg bg-white shadow-sm transition-shadow hover:shadow-md dark:bg-neutral-800"
      >
        <div class="p-6">
          <div class="mb-4 flex items-start justify-between">
            <div
              class="flex h-16 w-16 items-center justify-center rounded-lg bg-gradient-to-br from-blue-400 to-blue-600"
            >
              <span class="text-xl font-bold text-white">JC</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Voir"
              >
                <Eye class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Éditer"
              >
                <SquarePen class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-red-600 dark:text-neutral-400 dark:hover:text-red-400"
                title="Supprimer"
              >
                <Trash2 class="h-4 w-4" />
              </button>
            </div>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-neutral-900 dark:text-white">
            Jazz Collection
          </h3>
          <p class="mb-4 text-neutral-600 dark:text-neutral-400">
            Les maîtres du jazz et leurs œuvres intemporelles
          </p>
          <div
            class="flex items-center justify-between text-xs text-neutral-500 dark:text-neutral-400"
          >
            <span>23 vinyles</span>
            <span>Créée le 01/05/2023</span>
          </div>
        </div>
      </div>

      <!-- Collection 3 -->
      <div
        class="rounded-lg bg-white shadow-sm transition-shadow hover:shadow-md dark:bg-neutral-800"
      >
        <div class="p-6">
          <div class="mb-4 flex items-start justify-between">
            <div
              class="flex h-16 w-16 items-center justify-center rounded-lg bg-gradient-to-br from-purple-400 to-purple-600"
            >
              <span class="text-xl font-bold text-white">HH</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Voir"
              >
                <Eye class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
                title="Éditer"
              >
                <SquarePen class="h-4 w-4" />
              </button>
              <button
                class="p-2 text-neutral-500 transition-colors hover:text-red-600 dark:text-neutral-400 dark:hover:text-red-400"
                title="Supprimer"
              >
                <Trash2 class="h-4 w-4" />
              </button>
            </div>
          </div>
          <h3 class="mb-2 text-lg font-semibold text-neutral-900 dark:text-white">
            Hip-Hop Essentials
          </h3>
          <p class="mb-4 text-neutral-600 dark:text-neutral-400">
            Les classiques du hip-hop des années 80 et 90
          </p>
          <div
            class="flex items-center justify-between text-xs text-neutral-500 dark:text-neutral-400"
          >
            <span>30 vinyles</span>
            <span>Créée le 18/07/2023</span>
          </div>
        </div>
      </div>

      <!-- Collection vide (pour démonstration) -->
      <div
        class="rounded-lg border-2 border-dashed border-neutral-300 bg-white shadow-sm transition-colors hover:border-orange-400 dark:border-neutral-600 dark:bg-neutral-800 dark:hover:border-orange-500"
      >
        <div class="p-6 text-center">
          <div
            class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-lg bg-neutral-100 dark:bg-neutral-700"
          >
            <Plus class="h-8 w-8 text-neutral-400" />
          </div>
          <h3 class="mb-2 text-base font-semibold text-neutral-900 dark:text-white">
            Créer une nouvelle collection
          </h3>
          <p class="mb-4 text-neutral-600 dark:text-neutral-400">
            Commencez une nouvelle collection de vinyles
          </p>
          <button
            class="bg-gradient-rock hover:bg-gradient-rock-hover rounded-lg px-4 py-2 text-white transition-colors"
          >
            Créer
          </button>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex items-center justify-center space-x-2">
      <button
        class="px-3 py-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
      >
        Précédent
      </button>
      <button class="bg-gradient-rock rounded-lg px-3 py-2 text-white">1</button>
      <button
        class="px-3 py-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
        >2</button
      >
      <button
        class="px-3 py-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
        >3</button
      >
      <button
        class="px-3 py-2 text-neutral-500 transition-colors hover:text-orange-600 dark:text-neutral-400 dark:hover:text-orange-400"
      >
        Suivant
      </button>
    </div>
  </DashboardLayout>
</Layout>
