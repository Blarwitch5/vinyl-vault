          title={vinylData.title}
          artist={vinylData.artist}
          genre={vinylData.genre}
          year={vinylData.year}
          type={vinylData.type}
        />

        <!-- Informations de publication -->
        <VinylInfo items={infoItems} />

        <!-- Tracklist -->
