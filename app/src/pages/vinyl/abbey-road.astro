        { label: 'Collections', href: '/collections' },
        { label: 'Rock Classics', href: '/collections/rock-classics' },
        { label: 'Abbey Road' },
      ]}
    />

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Colonne gauche - Sidebar -->
      <div class="lg:col-span-1">
        <VinylSidebar
          vinylImage={vinylData.image}
          listenStatus={vinylData.listenStatus}
          rating={vinylData.rating}
          value={vinylData.value}
          shareData={vinylData.shareData}
        />
      </div>

      <!-- Colonne droite - Contenu principal -->
      <div class="space-y-6 lg:col-span-2">
        <!-- En-tête -->
