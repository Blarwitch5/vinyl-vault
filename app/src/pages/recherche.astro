---
import DashboardLayout from '../layouts/DashboardLayout.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Recherche">
  <DashboardLayout title="Recherche" currentPath="/recherche">
    <div class="mb-6">
      <h1 class="mb-4 text-xl font-bold text-neutral-900 dark:text-white">Rechercher un Vinyle</h1>

      <div class="rounded-lg bg-white p-6 shadow-sm dark:bg-neutral-800">
        <div class="flex flex-col gap-4 md:flex-row">
          <div class="flex-1">
            <label
              for="search-input"
              class="mb-2 block text-xs font-medium text-neutral-700 dark:text-neutral-300"
            >
              Recherche
            </label>
            <input
              type="text"
              id="search-input"
              placeholder="Artiste, album, genre..."
              class="w-full rounded-lg border border-neutral-300 px-4 py-2 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
            />
          </div>
          <div class="md:w-48">
            <label
              for="genre-filter"
              class="mb-2 block text-xs font-medium text-neutral-700 dark:text-neutral-300"
            >
              Genre
            </label>
            <select
              id="genre-filter"
              class="w-full rounded-lg border border-neutral-300 px-4 py-2 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
            >
              <option value="">Tous les genres</option>
              <option value="rock">Rock</option>
              <option value="jazz">Jazz</option>
              <option value="electronic">Electronic</option>
              <option value="classical">Classical</option>
              <option value="blues">Blues</option>
            </select>
          </div>
          <div class="md:w-32">
            <label
              for="year-filter"
              class="mb-2 block text-xs font-medium text-neutral-700 dark:text-neutral-300"
            >
              Année
            </label>
            <input
              type="number"
              id="year-filter"
              placeholder="2024"
              class="w-full rounded-lg border border-neutral-300 px-4 py-2 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
            />
          </div>
          <div class="flex items-end">
            <button
              class="rounded-lg bg-orange-600 px-6 py-2 text-white transition-colors hover:bg-orange-700"
            >
              Rechercher
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <div class="overflow-hidden rounded-lg bg-white shadow-sm dark:bg-neutral-800">
        <div
          class="flex aspect-square items-center justify-center bg-neutral-200 dark:bg-neutral-700"
        >
          <svg class="h-16 w-16 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
            ></path>
          </svg>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-neutral-900 dark:text-white">Dark Side of the Moon</h3>
          <p class="text-xs text-neutral-600 dark:text-neutral-400">Pink Floyd</p>
          <p class="mt-1 text-xs text-neutral-500 dark:text-neutral-500">1973 • Rock</p>
          <button
            class="mt-3 w-full rounded-lg bg-orange-600 py-2 text-xs text-white transition-colors hover:bg-orange-700"
          >
            Ajouter à ma collection
          </button>
        </div>
      </div>

      <div class="overflow-hidden rounded-lg bg-white shadow-sm dark:bg-neutral-800">
        <div
          class="flex aspect-square items-center justify-center bg-neutral-200 dark:bg-neutral-700"
        >
          <svg class="h-16 w-16 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
            ></path>
          </svg>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-neutral-900 dark:text-white">Kind of Blue</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">Miles Davis</p>
          <p class="mt-1 text-xs text-neutral-500 dark:text-neutral-500">1959 • Jazz</p>
          <button
            class="mt-3 w-full rounded-lg bg-orange-600 py-2 text-xs text-white transition-colors hover:bg-orange-700"
          >
            Ajouter à ma collection
          </button>
        </div>
      </div>

      <div class="overflow-hidden rounded-lg bg-white shadow-sm dark:bg-neutral-800">
        <div
          class="flex aspect-square items-center justify-center bg-neutral-200 dark:bg-neutral-700"
        >
          <svg class="h-16 w-16 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
            ></path>
          </svg>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-neutral-900 dark:text-white">Selected Ambient Works</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">Aphex Twin</p>
          <p class="mt-1 text-xs text-neutral-500 dark:text-neutral-500">1992 • Electronic</p>
          <button
            class="mt-3 w-full rounded-lg bg-orange-600 py-2 text-xs text-white transition-colors hover:bg-orange-700"
          >
            Ajouter à ma collection
          </button>
        </div>
      </div>

      <div class="overflow-hidden rounded-lg bg-white shadow-sm dark:bg-neutral-800">
        <div
          class="flex aspect-square items-center justify-center bg-neutral-200 dark:bg-neutral-700"
        >
          <svg class="h-16 w-16 text-neutral-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
            ></path>
          </svg>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-neutral-900 dark:text-white">Abbey Road</h3>
          <p class="text-sm text-neutral-600 dark:text-neutral-400">The Beatles</p>
          <p class="mt-1 text-xs text-neutral-500 dark:text-neutral-500">1969 • Rock</p>
          <button
            class="mt-3 w-full rounded-lg bg-orange-600 py-2 text-xs text-white transition-colors hover:bg-orange-700"
          >
            Ajouter à ma collection
          </button>
        </div>
      </div>
    </div>
  </DashboardLayout>
</Layout>
