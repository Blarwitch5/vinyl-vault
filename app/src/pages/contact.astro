---
import { Clock, Mail, MapPin, MessageCircle, Send } from '@lucide/astro/icons'
import Layout from '../layouts/Layout.astro'
---

<Layout title="Contact">
  <div class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Header simple -->
    <header
      class="border-b border-neutral-200 bg-white dark:border-neutral-800 dark:bg-neutral-900"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between py-6">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <div
                class="bg-gradient-rock mr-3 flex h-8 w-8 items-center justify-center rounded-lg"
              >
                <svg class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-neutral-900 dark:text-white">VinylVault</span>
            </a>
          </div>
          <nav class="hidden space-x-8 md:flex">
            <a
              href="/dashboard"
              class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
              >Dashboard</a
            >
            <a
              href="/collections"
              class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
              >Collections</a
            >
            <a
              href="/help"
              class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
              >Aide</a
            >
          </nav>
        </div>
      </div>
    </header>

    <!-- Contenu principal -->
    <main class="py-12">
      <div class="mx-auto max-w-6xl">
        <!-- En-tête -->
        <div class="mb-12 text-center">
          <h1 class="mb-4 text-4xl font-bold text-neutral-900 dark:text-white">Contactez-nous</h1>
          <p class="mx-auto max-w-3xl text-xl text-neutral-600 dark:text-neutral-400">
            Notre équipe est là pour vous aider avec votre collection de vinyles
          </p>
        </div>

        <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
          <!-- Formulaire de contact -->
          <div
            class="rounded-2xl border border-neutral-200 bg-white p-8 dark:border-neutral-700 dark:bg-neutral-800"
          >
            <h2 class="mb-6 text-2xl font-bold text-neutral-900 dark:text-white">
              Envoyez-nous un message
            </h2>

            <form class="space-y-6">
              <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <div>
                  <label
                    for="firstName"
                    class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >
                    Prénom
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="w-full rounded-lg border border-neutral-300 px-4 py-3 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
                    placeholder="Votre prénom"
                    required
                  />
                </div>
                <div>
                  <label
                    for="lastName"
                    class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                  >
                    Nom
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="w-full rounded-lg border border-neutral-300 px-4 py-3 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
                    placeholder="Votre nom"
                    required
                  />
                </div>
              </div>

              <div>
                <label
                  for="email"
                  class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                >
                  Email
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full rounded-lg border border-neutral-300 px-4 py-3 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
                  placeholder="votre@email.com"
                  required
                />
              </div>

              <div>
                <label
                  for="subject"
                  class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                >
                  Sujet
                </label>
                <select
                  id="subject"
                  name="subject"
                  class="w-full rounded-lg border border-neutral-300 px-4 py-3 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
                  required
                >
                  <option value="">Sélectionnez un sujet</option>
                  <option value="support">Support technique</option>
                  <option value="feature">Demande de fonctionnalité</option>
                  <option value="bug">Signaler un bug</option>
                  <option value="billing">Facturation</option>
                  <option value="partnership">Partenariat</option>
                  <option value="other">Autre</option>
                </select>
              </div>

              <div>
                <label
                  for="message"
                  class="mb-2 block text-sm font-medium text-neutral-700 dark:text-neutral-300"
                >
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  class="w-full rounded-lg border border-neutral-300 px-4 py-3 focus:border-orange-500 focus:ring-orange-500 dark:border-neutral-600 dark:bg-neutral-700 dark:text-white"
                  placeholder="Décrivez votre demande en détail..."
                  required></textarea>
              </div>

              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="privacy"
                  name="privacy"
                  class="mt-1 h-4 w-4 rounded border-neutral-300 text-orange-600 focus:ring-orange-500 dark:border-neutral-600"
                  required
                />
                <label for="privacy" class="ml-2 text-sm text-neutral-600 dark:text-neutral-400">
                  J'accepte la <a href="/privacy" class="text-gradient-rock hover:underline"
                    >politique de confidentialité</a
                  >
                  et consens au traitement de mes données personnelles.
                </label>
              </div>

              <button
                type="submit"
                class="bg-gradient-rock hover:bg-gradient-rock-hover flex w-full items-center justify-center rounded-lg px-6 py-3 font-medium text-white transition-colors"
              >
                <Send class="mr-2 h-5 w-5" />
                Envoyer le message
              </button>
            </form>
          </div>

          <!-- Informations de contact -->
          <div class="space-y-8">
            <!-- Informations générales -->
            <div
              class="rounded-2xl border border-neutral-200 bg-white p-8 dark:border-neutral-700 dark:bg-neutral-800"
            >
              <h2 class="mb-6 text-2xl font-bold text-neutral-900 dark:text-white">
                Informations de contact
              </h2>

              <div class="space-y-6">
                <div class="flex items-start">
                  <div
                    class="bg-gradient-rock-subtle flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
                  >
                    <Mail class="h-6 w-6 text-orange-600 dark:text-orange-400" />
                  </div>
                  <div class="ml-4">
                    <h3 class="font-semibold text-neutral-900 dark:text-white">Email</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">support@vinylvault.com</p>
                    <p class="text-sm text-neutral-500 dark:text-neutral-500">Réponse sous 24h</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div
                    class="bg-gradient-rock-subtle flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
                  >
                    <MessageCircle class="h-6 w-6 text-orange-600 dark:text-orange-400" />
                  </div>
                  <div class="ml-4">
                    <h3 class="font-semibold text-neutral-900 dark:text-white">Chat en direct</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">Disponible 24/7</p>
                    <p class="text-sm text-neutral-500 dark:text-neutral-500">
                      Pour les utilisateurs Pro
                    </p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div
                    class="bg-gradient-rock-subtle flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
                  >
                    <MapPin class="h-6 w-6 text-orange-600 dark:text-orange-400" />
                  </div>
                  <div class="ml-4">
                    <h3 class="font-semibold text-neutral-900 dark:text-white">Adresse</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">
                      123 Rue de la Musique<br />
                      75001 Paris, France
                    </p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div
                    class="bg-gradient-rock-subtle flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-lg"
                  >
                    <Clock class="h-6 w-6 text-orange-600 dark:text-orange-400" />
                  </div>
                  <div class="ml-4">
                    <h3 class="font-semibold text-neutral-900 dark:text-white">Horaires</h3>
                    <p class="text-neutral-600 dark:text-neutral-400">
                      Lun - Ven: 9h00 - 18h00<br />
                      Sam: 10h00 - 16h00
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ rapide -->
            <div
              class="rounded-2xl border border-neutral-200 bg-white p-8 dark:border-neutral-700 dark:bg-neutral-800"
            >
              <h2 class="mb-6 text-2xl font-bold text-neutral-900 dark:text-white">
                Questions fréquentes
              </h2>

              <div class="space-y-4">
                <div>
                  <h3 class="mb-2 font-semibold text-neutral-900 dark:text-white">
                    Combien de temps pour une réponse ?
                  </h3>
                  <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Nous répondons généralement dans les 24 heures pour les questions générales, et
                    sous 4 heures pour les utilisateurs Pro.
                  </p>
                </div>

                <div>
                  <h3 class="mb-2 font-semibold text-neutral-900 dark:text-white">
                    Puis-je programmer un appel ?
                  </h3>
                  <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Oui, pour les utilisateurs Enterprise, nous proposons des appels de support
                    personnalisés. Contactez-nous pour planifier.
                  </p>
                </div>

                <div>
                  <h3 class="mb-2 font-semibold text-neutral-900 dark:text-white">
                    Support en français ?
                  </h3>
                  <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Absolument ! Notre équipe support est entièrement francophone et peut vous aider
                    dans votre langue.
                  </p>
                </div>
              </div>

              <div class="mt-6">
                <a href="/help" class="text-gradient-rock inline-flex items-center hover:underline">
                  Voir toutes les FAQ →
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="bg-gradient-rock-subtle mt-16 rounded-2xl p-8 text-center">
          <h2 class="mb-4 text-3xl font-bold text-neutral-900 dark:text-white">
            Besoin d'aide immédiate ?
          </h2>
          <p class="mx-auto mb-6 max-w-2xl text-lg text-neutral-600 dark:text-neutral-400">
            Consultez notre centre d'aide ou contactez notre support technique pour une assistance
            personnalisée.
          </p>
          <div class="flex flex-col justify-center gap-4 sm:flex-row">
            <a
              href="/help"
              class="bg-gradient-rock hover:bg-gradient-rock-hover inline-flex items-center rounded-lg px-6 py-3 font-medium text-white transition-colors"
            >
              Centre d'aide
            </a>
            <a
              href="/bug-report"
              class="inline-flex items-center rounded-lg border border-neutral-300 px-6 py-3 text-neutral-900 transition-colors hover:bg-neutral-50 dark:border-neutral-600 dark:text-white dark:hover:bg-neutral-700"
            >
              Signaler un bug
            </a>
          </div>
        </div>
      </div>

      <!-- Footer simple -->
      <footer
        class="border-t border-neutral-200 bg-white dark:border-neutral-800 dark:bg-neutral-900"
      >
        <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
          <div class="flex flex-col items-center justify-between md:flex-row">
            <div class="mb-4 flex items-center md:mb-0">
              <div
                class="bg-gradient-rock mr-2 flex h-6 w-6 items-center justify-center rounded-lg"
              >
                <svg class="h-4 w-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <span class="text-neutral-600 dark:text-neutral-400"
                >© 2024 VinylVault. Tous droits réservés.</span
              >
            </div>
            <div class="flex space-x-6">
              <a
                href="/privacy"
                class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
                >Confidentialité</a
              >
              <a
                href="/terms"
                class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
                >Conditions</a
              >
              <a
                href="/about"
                class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
                >À propos</a
              >
            </div>
          </div>
        </div>
      </footer>
    </main>
  </div>
</Layout>
