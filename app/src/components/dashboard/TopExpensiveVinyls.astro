---
import DollarSign from '@lucide/astro/icons/dollar-sign'
import TrendingUp from '@lucide/astro/icons/trending-up'
---

<div>
  <h3 class="mb-3 flex items-center text-lg font-semibold text-neutral-900 dark:text-neutral-100">
    <DollarSign class="mr-2 h-5 w-5 text-orange-600 dark:text-orange-400" />
    Vinyles les plus chers
  </h3>

  <div class="rounded-lg bg-neutral-100 p-4 shadow-sm sm:p-6 dark:bg-neutral-800">
    <div class="space-y-2 sm:space-y-3">
      <div
        class="flex items-center justify-between rounded-lg bg-neutral-50 p-3 dark:bg-neutral-700"
      >
        <div class="flex items-center space-x-3">
          <div
            class="flex h-10 w-10 items-center justify-center overflow-hidden rounded-lg bg-orange-50 dark:bg-orange-950"
          >
            <div
              class="bg-gradient-rock flex h-full w-full items-center justify-center text-sm font-bold text-neutral-100"
            >
              PF
            </div>
          </div>
          <div>
            <p class="text-sm font-medium text-neutral-900 dark:text-neutral-100">
              The Dark Side of the Moon
            </p>
            <p class="text-xs text-neutral-500 dark:text-neutral-400">Pink Floyd</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-gradient-rock text-sm font-semibold">€67</p>
          <div class="flex items-center text-orange-600 dark:text-orange-400">
            <TrendingUp class="mr-1 h-3 w-3" />
            <span class="text-xs">+5%</span>
          </div>
        </div>
      </div>

      <div
        class="flex items-center justify-between rounded-lg bg-neutral-50 p-3 dark:bg-neutral-700"
      >
        <div class="flex items-center space-x-3">
          <div
            class="flex h-10 w-10 items-center justify-center overflow-hidden rounded-lg bg-orange-50 dark:bg-orange-950"
          >
            <div
              class="flex h-full w-full items-center justify-center bg-gradient-to-br from-blue-500 to-blue-600 text-sm font-bold text-neutral-100"
            >
              MD
            </div>
          </div>
          <div>
            <p class="text-sm font-medium text-neutral-900 dark:text-neutral-100">Kind of Blue</p>
            <p class="text-xs text-neutral-500 dark:text-neutral-400">Miles Davis</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-gradient-rock text-sm font-semibold">€58</p>
          <div class="flex items-center text-orange-600 dark:text-orange-400">
            <TrendingUp class="mr-1 h-3 w-3" />
            <span class="text-xs">+2%</span>
          </div>
        </div>
      </div>

      <div
        class="flex items-center justify-between rounded-lg bg-neutral-50 p-3 dark:bg-neutral-700"
      >
        <div class="flex items-center space-x-3">
          <div
            class="flex h-10 w-10 items-center justify-center overflow-hidden rounded-lg bg-orange-50 dark:bg-orange-950"
          >
            <div
              class="flex h-full w-full items-center justify-center bg-gradient-to-br from-purple-500 to-purple-600 text-sm font-bold text-neutral-100"
            >
              NS
            </div>
          </div>
          <div>
            <p class="text-sm font-medium text-neutral-900 dark:text-neutral-100">Illmatic</p>
            <p class="text-xs text-neutral-500 dark:text-neutral-400">Nas</p>
          </div>
        </div>
        <div class="text-right">
          <p class="text-gradient-rock text-sm font-semibold">€52</p>
          <div class="flex items-center text-neutral-500 dark:text-neutral-400">
            <TrendingUp class="mr-1 h-3 w-3 rotate-180" />
            <span class="text-xs">-1%</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
