---
import Activity from '@lucide/astro/icons/activity'
import Heart from '@lucide/astro/icons/heart'
import Library from '@lucide/astro/icons/library'
import Plus from '@lucide/astro/icons/plus'
import ScanSearch from '@lucide/astro/icons/scan-search'
---

<div>
  <div class="mb-3 flex items-center justify-between">
    <h2 class="flex items-center text-lg font-semibold text-neutral-900 dark:text-neutral-100">
      <Activity class="mr-2 h-5 w-5 text-orange-600 dark:text-orange-400" />
      Activité récente
    </h2>
    <a href="/activity" class="text-gradient-rock text-sm transition-colors"> Voir tout → </a>
  </div>

  <div class="rounded-lg bg-neutral-100 p-4 shadow-sm sm:p-6 dark:bg-neutral-800">
    <div class="space-y-3 sm:space-y-4">
      <!-- Activité 1 -->
      <div class="flex items-start space-x-3">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-full bg-orange-100 dark:bg-orange-900"
        >
          <Plus class="h-4 w-4 text-orange-600 dark:text-orange-400" />
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-900 dark:text-neutral-100">
            <span class="font-medium">Abbey Road</span> ajouté à <span
              class="font-medium text-orange-600 dark:text-orange-400">Rock Classics</span
            >
          </p>
          <p class="text-xs text-neutral-500 dark:text-neutral-400">Il y a 2h</p>
        </div>
      </div>

      <!-- Activité 2 -->
      <div class="flex items-start space-x-3">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900"
        >
          <Library class="h-4 w-4 text-blue-600 dark:text-blue-400" />
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-900 dark:text-neutral-100">
            Nouvelle collection <span class="font-medium text-blue-600 dark:text-blue-400"
              >Hip-Hop Essentials</span
            > créée
          </p>
          <p class="text-xs text-neutral-500 dark:text-neutral-400">Il y a 1j</p>
        </div>
      </div>

      <!-- Activité 3 -->
      <div class="flex items-start space-x-3">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-full bg-green-100 dark:bg-green-900"
        >
          <ScanSearch class="h-4 w-4 text-green-600 dark:text-green-400" />
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-900 dark:text-neutral-100">
            Recherche : <span class="font-medium">"Miles Davis"</span> dans Discogs
          </p>
          <p class="text-xs text-neutral-500 dark:text-neutral-400">Il y a 2j</p>
        </div>
      </div>

      <!-- Activité 4 -->
      <div class="flex items-start space-x-3">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-full bg-purple-100 dark:bg-purple-900"
        >
          <Heart class="h-4 w-4 text-purple-600 dark:text-purple-400" />
        </div>
        <div class="flex-1">
          <p class="text-sm text-neutral-900 dark:text-neutral-100">
            <span class="font-medium">Kind of Blue</span> ajouté à la wishlist
          </p>
          <p class="text-xs text-neutral-500 dark:text-neutral-400">Il y a 3j</p>
        </div>
      </div>
    </div>
  </div>
</div>
