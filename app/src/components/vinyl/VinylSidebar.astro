---
import Heart from '@lucide/astro/icons/heart'
import Edit from '@lucide/astro/icons/pen'
import Share2 from '@lucide/astro/icons/share-2'
import TrendingUp from '@lucide/astro/icons/trending-up'
import Button from '../ui/Button.astro'
import ShareModal from '../ui/ShareModal.astro'
import StarRating from '../ui/StarRating.astro'

export interface Props {
  vinylImage: {
    initials: string
    gradient: string
  }
  listenStatus: {
    isListened: boolean
    listenDate?: string
  }
  rating: {
    currentRating: number
    maxRating: number
    averageRating: string
    totalRatings: string
  }
  value: {
    estimated: string
    purchase: string
    profit: string
    average: string
    trend: string
  }
  shareData: {
    title: string
    artist: string
    url?: string
  }
}

const { vinylImage, listenStatus, rating, value, shareData } = Astro.props
---

<div class="sticky top-6 space-y-4">
  <!-- Image du vinyle -->
  <div class="overflow-hidden rounded-xl bg-neutral-50 shadow-lg dark:bg-neutral-800">
    <div class={`aspect-square p-8 ${vinylImage.gradient}`}>
      <div
        class="flex h-full w-full items-center justify-center rounded-lg bg-white/10 backdrop-blur-sm"
      >
        <span class="text-8xl font-bold text-white">{vinylImage.initials}</span>
      </div>
    </div>
  </div>

  <!-- Statut d'écoute -->
  <div class="rounded-lg bg-neutral-50 p-4 shadow-sm dark:bg-neutral-800">
    <h3 class="mb-3 text-sm font-semibold text-neutral-900 dark:text-neutral-100">
      Statut d'écoute
    </h3>
    <div class="space-y-4">
      <!-- Bouton vinyle écouté -->
      <label class="flex cursor-pointer items-center space-x-3">
        <input
          type="checkbox"
          id="listened-checkbox"
          class="h-5 w-5 rounded border-neutral-300 text-orange-600 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 dark:border-neutral-600 dark:bg-neutral-700"
          checked={listenStatus.isListened}
        />
        <span class="text-sm font-medium text-neutral-900 dark:text-neutral-100">
          Vinyle écouté
        </span>
      </label>
    </div>
  </div>

  <!-- Système de notation -->
  <div class="rounded-lg bg-neutral-50 p-4 shadow-sm dark:bg-neutral-800">
    <h3 class="mb-3 text-sm font-semibold text-neutral-900 dark:text-neutral-100">Ma notation</h3>
    <div class="space-y-4">
      <!-- Composant de notation par étoiles -->
      <StarRating
        maxRating={rating.maxRating}
        currentRating={rating.currentRating}
        showText={true}
        size="md"
        className=""
      />

      <!-- Note moyenne Discogs -->
      <div class="border-t border-neutral-200 pt-3 dark:border-neutral-700">
        <div class="text-xs text-neutral-500 dark:text-neutral-400">
          Note moyenne Discogs : {rating.averageRating} ({rating.totalRatings})
        </div>
      </div>
    </div>
  </div>

  <!-- Actions rapides -->
  <div class="rounded-lg bg-neutral-50 p-4 shadow-sm dark:bg-neutral-800">
    <h3 class="mb-3 text-sm font-semibold text-neutral-900 dark:text-neutral-100">Actions</h3>
    <div class="space-y-3">
      <Button variant="gradient" size="lg" class="w-full">
        <Edit class="h-4 w-4" />
        <span class="xs:inline hidden">Modifier</span>
      </Button>
      <div class="flex gap-2 lg:flex-col lg:gap-3">
        <Button variant="ghost" size="lg" class="flex-1 lg:w-full">
          <Heart class="h-4 w-4" />
          <span class="xs:inline hidden">Favori</span>
        </Button>
        <Button variant="ghost" size="lg" class="flex-1 lg:w-full" data-action="share">
          <Share2 class="h-4 w-4" />
          <span class="xs:inline hidden">Partager</span>
        </Button>
      </div>
    </div>
  </div>

  <!-- Valeur et statistiques -->
  <div class="rounded-lg bg-neutral-50 p-4 shadow-sm dark:bg-neutral-800">
    <h3 class="mb-3 text-sm font-semibold text-neutral-900 dark:text-neutral-100">
      Valeur estimée
    </h3>
    <div class="mb-3 flex items-baseline space-x-2">
      <span class="text-3xl font-bold text-orange-600 dark:text-orange-400">{value.estimated}</span>
      <div class="flex items-center text-emerald-600 dark:text-emerald-400">
        <TrendingUp class="h-4 w-4" />
        <span class="ml-1 text-sm font-medium">{value.trend}</span>
      </div>
    </div>
    <div class="space-y-3 border-t border-neutral-200 pt-4 text-sm dark:border-neutral-700">
      <div class="flex justify-between">
        <span class="text-neutral-600 dark:text-neutral-400">Prix d'achat</span>
        <span class="font-medium text-neutral-900 dark:text-neutral-100">{value.purchase}</span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-600 dark:text-neutral-400">Plus-value</span>
        <span class="font-medium text-emerald-600 dark:text-emerald-400">{value.profit}</span>
      </div>
      <div class="flex justify-between">
        <span class="text-neutral-600 dark:text-neutral-400">Valeur moyenne</span>
        <span class="font-medium text-neutral-900 dark:text-neutral-100">{value.average}</span>
      </div>
    </div>
  </div>
</div>

<!-- Modal de partage -->
<ShareModal title={shareData.title} artist={shareData.artist} url={shareData.url} />
