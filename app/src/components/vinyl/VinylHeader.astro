---
import Calendar from '@lucide/astro/icons/calendar'
import Music from '@lucide/astro/icons/music'
import Tag from '@lucide/astro/icons/tag'

export interface Props {
  title: string
  artist: string
  genre: string
  year: number
  type: string
}

const { title, artist, genre, year, type } = Astro.props
---

<header class="rounded-lg bg-neutral-50 p-6 shadow-sm dark:bg-neutral-800">
  <h1 class="mb-2 text-3xl font-bold text-neutral-900 dark:text-neutral-100">{title}</h1>
  <p class="mb-3 text-xl text-neutral-600 dark:text-neutral-400">{artist}</p>
  <div class="flex flex-wrap gap-3">
    <span
      class="inline-flex items-center rounded-full bg-orange-100 px-4 py-2 text-sm font-medium text-orange-800 dark:bg-orange-900/30 dark:text-orange-400"
    >
      <Tag class="mr-2 h-4 w-4" />
      {genre}
    </span>
    <span
      class="inline-flex items-center rounded-full bg-blue-100 px-4 py-2 text-sm font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-400"
    >
      <Calendar class="mr-2 h-4 w-4" />
      {year}
    </span>
    <span
      class="inline-flex items-center rounded-full bg-purple-100 px-4 py-2 text-sm font-medium text-purple-800 dark:bg-purple-900/30 dark:text-purple-400"
    >
      <Music class="mr-2 h-4 w-4" />
      {type}
    </span>
  </div>
</header>
