---
import { X, Plus, Calendar, Music, Tag, Globe } from '@lucide/astro/icons'

type Props = {
  vinyl?: {
    id: string
    title: string
    artist: string
    year: string
    genre: string
    thumb?: string
    country?: string
    label?: string
    format?: string
    tracklist?: Array<{ position: string; title: string; duration?: string }>
    notes?: string
  }
}

const { vinyl } = Astro.props
---

<div
  id="vinyl-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50 p-4"
>
  <div class="relative max-h-[90vh] w-full max-w-2xl overflow-y-auto rounded-lg bg-white shadow-xl dark:bg-neutral-800">
    <!-- Header -->
    <div class="sticky top-0 flex items-center justify-between border-b border-neutral-200 p-6 dark:border-neutral-700">
      <h2 class="text-xl font-bold text-neutral-900 dark:text-white">Détails du Vinyle</h2>
      <button
        id="close-modal"
        class="rounded-lg p-2 text-neutral-500 transition-colors hover:bg-neutral-100 hover:text-neutral-700 dark:text-neutral-400 dark:hover:bg-neutral-700 dark:hover:text-neutral-300"
      >
        <X class="h-5 w-5" />
      </button>
    </div>

    <!-- Content -->
    <div class="p-6">
      {vinyl ? (
        <div class="space-y-6">
          <!-- Image et infos principales -->
          <div class="flex gap-6">
            <div class="flex-shrink-0">
              {vinyl.thumb ? (
                <img
                  src={vinyl.thumb}
                  alt={vinyl.title}
                  class="h-48 w-48 rounded-lg object-cover shadow-md"
                />
              ) : (
                <div class="flex h-48 w-48 items-center justify-center rounded-lg bg-gradient-to-br from-orange-500 to-orange-600 shadow-md">
                  <span class="text-4xl font-bold text-white">
                    {vinyl.artist.charAt(0)}{vinyl.title.charAt(0)}
                  </span>
                </div>
              )}
            </div>
            <div class="flex-1 space-y-4">
              <div>
                <h3 class="text-2xl font-bold text-neutral-900 dark:text-white">{vinyl.title}</h3>
                <p class="text-lg text-neutral-600 dark:text-neutral-400">{vinyl.artist}</p>
              </div>
              
              <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                {vinyl.year && (
                  <div class="flex items-center gap-2">
                    <Calendar class="h-4 w-4 text-orange-600 dark:text-orange-400" />
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.year}</span>
                  </div>
                )}
                {vinyl.genre && (
                  <div class="flex items-center gap-2">
                    <Music class="h-4 w-4 text-orange-600 dark:text-orange-400" />
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.genre}</span>
                  </div>
                )}
                {vinyl.country && (
                  <div class="flex items-center gap-2">
                    <Globe class="h-4 w-4 text-orange-600 dark:text-orange-400" />
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.country}</span>
                  </div>
                )}
                {vinyl.label && (
                  <div class="flex items-center gap-2">
                    <Tag class="h-4 w-4 text-orange-600 dark:text-orange-400" />
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.label}</span>
                  </div>
                )}
              </div>

              {vinyl.format && (
                <div class="rounded-lg bg-neutral-50 p-3 dark:bg-neutral-700">
                  <p class="text-sm font-medium text-neutral-900 dark:text-white">Format</p>
                  <p class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.format}</p>
                </div>
              )}
            </div>
          </div>

          <!-- Tracklist -->
          {vinyl.tracklist && vinyl.tracklist.length > 0 && (
            <div>
              <h4 class="mb-3 text-lg font-semibold text-neutral-900 dark:text-white">Tracklist</h4>
              <div class="space-y-2">
                {vinyl.tracklist.map((track) => (
                  <div class="flex items-center justify-between rounded-lg bg-neutral-50 p-3 dark:bg-neutral-700">
                    <div class="flex items-center gap-3">
                      <span class="text-sm font-medium text-orange-600 dark:text-orange-400">
                        {track.position}
                      </span>
                      <span class="text-sm text-neutral-900 dark:text-white">{track.title}</span>
                    </div>
                    {track.duration && (
                      <span class="text-xs text-neutral-500 dark:text-neutral-400">{track.duration}</span>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Notes personnelles -->
          {vinyl.notes && (
            <div>
              <h4 class="mb-3 text-lg font-semibold text-neutral-900 dark:text-white">Notes</h4>
              <div class="rounded-lg bg-neutral-50 p-4 dark:bg-neutral-700">
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{vinyl.notes}</p>
              </div>
            </div>
          )}
        </div>
      ) : (
        <div class="flex items-center justify-center py-12">
          <p class="text-neutral-500 dark:text-neutral-400">Aucune information disponible</p>
        </div>
      )}
    </div>

    <!-- Footer -->
    <div class="sticky bottom-0 border-t border-neutral-200 p-6 dark:border-neutral-700">
      <div class="flex gap-3">
        <button
          id="add-to-collection"
          class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-orange-600 py-3 font-medium text-white transition-colors hover:bg-orange-700"
        >
          <Plus class="h-5 w-5" />
          Ajouter à ma collection
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('vinyl-modal')
  const closeBtn = document.getElementById('close-modal')
  const addBtn = document.getElementById('add-to-collection')

  // Fermer la modal
  const closeModal = () => {
    modal?.classList.add('hidden')
    modal?.classList.remove('flex')
  }

  closeBtn?.addEventListener('click', closeModal)
  
  // Fermer en cliquant à l'extérieur
  modal?.addEventListener('click', (event) => {
    if (event.target === modal) {
      closeModal()
    }
  })

  // Fermer avec Escape
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal()
    }
  })

  // Ouvrir la modal avec les données du vinyle
  (window as any).openVinylModal = (vinylData: any) => {
    if (!modal) return
    
    // Mettre à jour le contenu de la modal
    const title = modal.querySelector('h3')
    const artist = modal.querySelector('p')
    const image = modal.querySelector('img')
    const placeholder = modal.querySelector('.bg-gradient-to-br')
    
    if (title) title.textContent = vinylData.title
    if (artist) artist.textContent = vinylData.artist
    
    if (vinylData.thumb && image) {
      image.src = vinylData.thumb
      image.alt = vinylData.title
      image.classList.remove('hidden')
      placeholder?.classList.add('hidden')
    } else if (placeholder) {
      placeholder.classList.remove('hidden')
      image?.classList.add('hidden')
      const initials = placeholder.querySelector('span')
      if (initials) {
        initials.textContent = `${vinylData.artist.charAt(0)}${vinylData.title.charAt(0)}`
      }
    }

    // Mettre à jour les autres informations
    const yearEl = modal.querySelector('[data-field="year"]')
    const genreEl = modal.querySelector('[data-field="genre"]')
    const countryEl = modal.querySelector('[data-field="country"]')
    const labelEl = modal.querySelector('[data-field="label"]')
    
    if (yearEl) yearEl.textContent = vinylData.year || ''
    if (genreEl) genreEl.textContent = vinylData.genre || ''
    if (countryEl) countryEl.textContent = vinylData.country || ''
    if (labelEl) labelEl.textContent = vinylData.label || ''

    // Afficher la modal
    modal.classList.remove('hidden')
    modal.classList.add('flex')
  }

  // Gérer l'ajout à la collection
  addBtn?.addEventListener('click', () => {
    // TODO: Implémenter l'ajout à la collection
    console.log('Ajouter à la collection')
    closeModal()
  })
</script>
