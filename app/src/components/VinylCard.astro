---
import Eye from '@lucide/astro/icons/eye'

type Props = {
  href: string
  initials: string
  title: string
  artist: string
  year: string
  genre: string
  addedTime: string
  collection: string
  price: string
  gradientColors?: string
}

const {
  href,
  initials,
  title,
  artist,
  year,
  genre,
  addedTime,
  collection,
  price,
  gradientColors = 'from-orange-500 to-orange-600',
} = Astro.props
---

<a
  href={href}
  class="block rounded-lg bg-neutral-50 p-3 shadow transition-shadow hover:shadow-md sm:p-4 dark:bg-neutral-800"
>
  <div class="flex items-center space-x-4">
    <div
      class="flex h-16 w-16 items-center justify-center overflow-hidden rounded-lg bg-gradient-to-br from-neutral-100 to-neutral-200 dark:from-neutral-700 dark:to-neutral-600"
    >
      <div
        class={`flex h-full w-full items-center justify-center bg-gradient-to-br ${gradientColors} text-lg font-bold text-neutral-100`}
      >
        {initials}
      </div>
    </div>
    <div class="flex-1">
      <h3 class="text-base font-semibold text-neutral-900 dark:text-neutral-100">
        {title}
      </h3>
      <p class="text-xs text-neutral-600 dark:text-neutral-400">
        {artist} • {year} • {genre}
      </p>
      <p class="mt-1 text-xs text-neutral-500 dark:text-neutral-400">
        Ajouté {addedTime} • {collection}
      </p>
    </div>
    <div class="flex items-center space-x-2">
      <span class="text-xs font-semibold text-orange-600 dark:text-orange-400">€{price}</span>
      <Eye class="h-5 w-5 text-orange-600 dark:text-orange-400" />
    </div>
  </div>
</a>
