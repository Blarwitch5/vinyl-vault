{
  "name": "vinyl-vault",
  "type": "module",
  "version": "0.0.1",
  "description": "Application de gestion de collection de vinyles avec intégration Discogs",
  "author": "VinylVault Team",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "lint": "eslint . --ext .js,.ts,.astro",
    "format": "prettier --write . --plugin-search-dir=.",
    "validate-config": "node scripts/validate-config.js",
    "validate-rules": "node scripts/validate-cursorrules.js",
    "update-colors": "node scripts/update-colors.js",
    "setup": "node scripts/validate-config.js && echo '✅ Configuration validée - Vous pouvez maintenant lancer pnpm dev'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "node prisma/seed.js",
    "deploy": "vercel --prod",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@astrojs/tailwind": "^5.1.5",
    "@astrojs/vercel": "^8.2.7",
    "@prisma/client": "^6.15.0",
    "astro": "^5.13.5",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "vinyl",
    "collection",
    "discogs",
    "music",
    "astro",
    "tailwindcss"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
