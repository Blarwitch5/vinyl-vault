{
  "name": "vinyl-vault-monorepo",
  "version": "1.0.0",
  "description": "Monorepo VinylVault - Landing Marketing + Application Gestion Collection Vinyles",
  "private": true,
  "workspaces": [
    "landing",
    "app"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:landing\" \"npm run dev:app\" --kill-others-on-fail",
    "dev:landing": "cd landing && npm run dev",
    "dev:app": "cd app && npm run dev",
    "build": "npm run build:landing && npm run build:app",
    "build:landing": "cd landing && npm run build",
    "build:app": "cd app && npm run build",
    "preview": "npm run preview:landing && npm run preview:app",
    "preview:landing": "cd landing && npm run preview",
    "preview:app": "cd app && npm run preview",
    "install:all": "npm install && npm install --workspace=landing && npm install --workspace=app",
    "check:landing": "cd landing && npm run check",
    "check:app": "cd app && npm run check",
    "clean": "rm -rf landing/node_modules app/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "monorepo",
    "vinyl",
    "collection",
    "landing",
    "astro",
    "tailwindcss"
  ],
  "license": "MIT",
  "dependencies": {
    "@lucide/astro": "^0.544.0",
    "@tailwindcss/vite": "^4.1.13",
    "flowbite": "^3.1.2",
    "pnpm": "^10.17.1",
    "tailwindcss": "^4.1.13"
  }
}